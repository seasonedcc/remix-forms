{
  "name": "remix-forms-web",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\" \"PORT=3000 npm run dev:server\"",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:server": "cross-env NODE_ENV=development netlify dev",
    "playwright:ci:install": "playwright install chromium",
    "start": "cross-env NODE_ENV=production netlify dev",
    "lint": "eslint . --ext .tsx,.ts --max-warnings=0",
    "prelint": "prettier --check .",
    "tsc": "tsc",
    "test": "playwright test",
    "pretest:ci": "npm run build",
    "test:ci": "playwright test"
  },
  "dependencies": {
    "@headlessui/react": "~1.5.0",
    "@heroicons/react": "^1.0.5",
    "@hookform/resolvers": "^2.8.8",
    "@netlify/functions": "^1.0.0",
    "@remix-run/netlify": "1.7.4",
    "@remix-run/node": "1.7.4",
    "@remix-run/react": "1.7.4",
    "@remix-run/serve": "1.7.4",
    "@tailwindcss/forms": "^0.4.0",
    "cross-env": "^7.0.3",
    "domain-functions": "^2.0.0",
    "highlight.js": "^11.4.0",
    "lodash": "^4.17.21",
    "netlify-cli": "^10.7.1",
    "npm-run-all": "^4.1.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.31.0",
    "rehype-highlight": "^6.0.0",
    "remix-forms": "*",
    "tailwindcss": "^3.0.23",
    "ts-pattern": "~4.0.5",
    "zod": "^3.12.0"
  },
  "devDependencies": {
    "@playwright/test": "~1.21.1",
    "@remix-run/dev": "1.7.4",
    "@tailwindcss/typography": "^0.5.8",
    "@types/lodash": "^4.14.178",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.49",
    "eslint": "^8.44.0",
    "eslint-config-custom": "*",
    "postcss": "^8.4.6",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.0",
    "tailwind-scrollbar": "^1.3.1",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">=14"
  }
}
