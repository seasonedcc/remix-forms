{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix-routes && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:routes\" \"npm run dev:css\" \"npm run dev:remix\" \"npm run dev:node\"",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:node": "cross-env NODE_ENV=development netlify dev",
    "dev:routes": "remix-routes --watch",
    "start": "cross-env NODE_ENV=production netlify dev",
    "test": "playwright test",
    "pretest:ci": "npm run build",
    "test:ci": "playwright test"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.5",
    "@hookform/resolvers": "^2.8.8",
    "@netlify/functions": "^1.0.0",
    "@remix-run/netlify": "^1.6.3",
    "@remix-run/node": "^1.4.1",
    "@remix-run/react": "^1.4.1",
    "@remix-run/serve": "^1.4.1",
    "@tailwindcss/forms": "^0.4.0",
    "cross-env": "^7.0.3",
    "highlight.js": "^11.4.0",
    "lodash": "^4.17.21",
    "netlify-cli": "^10.7.1",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.31.0",
    "remix-domains": "^0.2.0",
    "remix-forms": "latest",
    "tailwindcss": "^3.0.23",
    "zod": "^3.12.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.21.1",
    "@remix-run/dev": "^1.4.1",
    "@remix-run/eslint-config": "^1.6.3",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^3.0.10",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.15.0",
    "patch-package": "^6.4.7",
    "postcss": "^8.4.6",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "concurrently": "^7.0.0",
    "remix-routes": "^0.1.2",
    "tailwind-scrollbar": "^1.3.1",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}