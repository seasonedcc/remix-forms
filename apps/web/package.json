{
  "name": "remix-forms-web",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\" \"PORT=3000 npm run dev:server\"",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:server": "cross-env NODE_ENV=development netlify dev",
    "playwright:ci:install": "playwright install chromium",
    "start": "cross-env NODE_ENV=production netlify dev",
    "lint": "eslint . --max-warnings=0",
    "prelint": "prettier --check .",
    "tsc": "tsc",
    "test": "playwright test",
    "pretest:ci": "npm run build",
    "test:ci": "playwright test"
  },
  "dependencies": {
    "@headlessui/react": "~1.5.0",
    "@heroicons/react": "^2.1.3",
    "@hookform/resolvers": "^2.9.11",
    "@netlify/functions": "^2.6.3",
    "@remix-run/netlify": "~1.10.1",
    "@remix-run/node": "~1.10.1",
    "@remix-run/react": "~1.10.1",
    "@remix-run/serve": "~1.10.1",
    "@tailwindcss/forms": "^0.5.7",
    "cross-env": "^7.0.3",
    "domain-functions": "^2.6.0",
    "highlight.js": "^11.9.0",
    "lodash": "^4.17.21",
    "netlify-cli": "^10.7.1",
    "npm-run-all": "^4.1.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.51.3",
    "rehype-highlight": "^7.0.0",
    "remix-forms": "*",
    "tailwindcss": "^3.4.3",
    "ts-pattern": "~5.1.1",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@playwright/test": "~1.43.1",
    "@remix-run/dev": "~1.10.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/lodash": "^4.17.0",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.49",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwind-scrollbar": "^3.1.0",
    "typescript": "~5.4.5"
  },
  "engines": {
    "node": ">=14"
  }
}
