{
  "name": "remix-forms",
  "version": "4.0.0",
  "description": "The full-stack form library for React Router v7",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "./dist/*"],
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsup ./src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup ./src/index.ts --format esm,cjs --watch --dts --external react",
    "tsc": "tsc",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seasonedcc/remix-forms.git"
  },
  "bugs": {
    "url": "https://github.com/seasonedcc/remix-forms/issues"
  },
  "homepage": "https://remix-forms.seasoned.cc",
  "keywords": [
    "remix",
    "forms",
    "actions",
    "zod",
    "typescript",
    "react-hook-form"
  ],
  "author": "Daniel Weinmann",
  "peerDependencies": {
    "composable-functions": ">=4",
    "react": ">=16.8",
    "react-hook-form": ">=7.27",
    "react-router": ">=7",
    "zod": ">=4.0.0"
  },
  "devDependencies": {
    "@types/react": ">=16.8",
    "@types/react-dom": ">=16.8",
    "react": ">=16.8",
    "react-router": "7.9.4",
    "tsup": "^8.3.5",
    "typescript": "5.8.3",
    "vite": "6.0.7",
    "vitest": "2.1.8"
  }
}
